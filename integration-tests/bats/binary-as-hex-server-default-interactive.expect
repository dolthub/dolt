#!/usr/bin/expect

set port [lindex $argv 0]
set timeout 10
log_user 0

spawn dolt --host 127.0.0.1 --port $port --no-tls sql
expect ">"

send "USE repo1;\r"
expect ">"

send "SELECT * FROM binary_test;\r"
expect {
    "0x0A000000" {
        expect {
            "0x616263" {
                expect ">"
            }
            timeout {
                send "exit\r"
                expect eof
                exit 1
            }
        }
    }
    timeout {
        send "exit\r"
        expect eof
        exit 1
    }
}

send "SELECT pk, vb FROM binary_test WHERE pk = 1;\r"
expect {
    "0x0A000000" {
        expect ">"
        send "SELECT pk, vb FROM binary_test WHERE pk = 2;\r"
        expect {
            "0x616263" {
                expect ">"
                send "exit\r"
                expect eof
                exit 0
            }
            "abc" {
                send "exit\r"
                expect eof
                exit 1
            }
            timeout {
                send "exit\r"
                expect eof
                exit 1
            }
        }
    }
    timeout {
        send "exit\r"
        expect eof
        exit 1
    }
}